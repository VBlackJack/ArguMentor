<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+).
    SECURITY: Exclude sensitive data from cloud backups and device transfers.

    Note: When using <include>, only explicitly included paths are backed up.
    No need to exclude other domains as they're not in the include path.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include only SharedPreferences (safe, non-sensitive settings) -->
        <include domain="sharedpref" path="." />
        <!--
            NOT backed up (not in include path):
            - database: User content in Room database
            - cache: Temporary files
            - file: DataStore preferences
        -->
    </cloud-backup>
    <device-transfer>
        <!-- Allow all data for device-to-device transfer (same user, trusted) -->
        <include domain="file" path="." />
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <!-- cache is not included, so it won't be transferred -->
    </device-transfer>
</data-extraction-rules>
