<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+).
    SECURITY: Exclude sensitive data from cloud backups and device transfers.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include only safe, non-sensitive files -->
        <include domain="sharedpref" path="." />

        <!-- Exclude database files - contain user data -->
        <exclude domain="database" path="." />

        <!-- Exclude cache - temporary data -->
        <exclude domain="cache" path="." />

        <!-- Exclude DataStore preferences file -->
        <exclude domain="file" path="datastore/" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow all data for device-to-device transfer (same user) -->
        <include domain="file" path="." />
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />

        <!-- Still exclude cache -->
        <exclude domain="cache" path="." />
    </device-transfer>
</data-extraction-rules>
